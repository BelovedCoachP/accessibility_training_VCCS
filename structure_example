    <script>
        const magnifier = document.getElementById('magnifier');
        const magnifierContent = document.getElementById('magnifierContent');
        const pageContent = document.getElementById('pageContent');
        
        const magnifierSize = 200;
        const zoomLevel = 2.5;
        
        // Clone the content for magnification
        const clonedContent = pageContent.cloneNode(true);
        clonedContent.style.transform = `scale(${zoomLevel})`;
        clonedContent.style.width = pageContent.offsetWidth + 'px';
        magnifierContent.appendChild(clonedContent);
        
        document.addEventListener('mousemove', (e) => {
            const x = e.clientX;
            const y = e.clientY;
            
            // Position magnifier centered on mouse
            magnifier.style.left = (x - magnifierSize / 2) + 'px';
            magnifier.style.top = (y - magnifierSize / 2) + 'px';
            
            // Calculate the position for the cloned content
            const contentX = -(x * zoomLevel - magnifierSize / 2);
            const contentY = -(y * zoomLevel - magnifierSize / 2);
            
            magnifierContent.style.left = contentX + 'px';
            magnifierContent.style.top = contentY + 'px';
        });
        
        // Show magnifier on mouse enter
        document.addEventListener('mouseenter', () => {
            magnifier.style.display = 'block';
        });
    </script>
